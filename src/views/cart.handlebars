<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/products.css" />
  </head>
  <nav>
    <a class='navLink' href="/"><img src="/img/BrandLogo.jpg" alt="logo" /> </a>
    <div class="login">
      {{#if user}}
        <a class="btn-login cartID" id="{{user.cart}}" href="/current">Mis datos</a>
        <a class="btn-login" href="/logout">Salir</a>
      {{else}}
        <a class="btn-login" href="/login">Iniciar sesion</a>
        <a class="btn-login" href="/register">Registrarse</a>
      {{/if}}
    </div>
  </nav>
  <body>
    <div>
      {{#if user.isAdmin}}
        <h1>Administrador</h1>
      {{/if}}
    </div>
    <h1>Carrito</h1>
    {{#if cart.products.length}}
      <div class='item-list'>
        {{#each cart.products}}
          <div class='item' id="item">
          <div class='img-container'>
            <img src={{this.thumbnail}} alt={{this.title}} />
          </div>
          <div class='item-body'>
            <h5 class='item-title'>{{this.title}}</h5>
            <p class='item-text'>${{this.price}}</p>
            <p class='item-text'>Cantidad: {{this.quantity}}</p>
          </div>
          </div>
        {{/each}}
      </div>
      <a class='button-item' onclick="clearCart('{{cart._id}}')">Vaciar Carrito</a>
      <a class='button-item' onclick="purchaseCart('{{cart._id}}')">Confirmar Compra</a>
    {{else}}
      <p>Carrito vac√≠o</p>
    {{/if}}
  </body>
  <script src="/js/cart.js"></script>
</html>