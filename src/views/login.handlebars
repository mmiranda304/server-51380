<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/login.css" />
    </head>
    <body>
        <nav>
            <a class='navLink' href="/"><img src="/img/BrandLogo.jpg" alt="logo" /> </a>
            <div class="login">
                {{#if user}}
                    <a class="btn-login" href="/current">Mis datos</a>
                    <a class="btn-login" href="/logout">Salir</a>
                {{else}}
                <a class="btn-login" href="/login">Iniciar sesion</a>
                <a class="btn-register" href="/register">Registrarse</a>
                {{/if}}
            </div>
        </nav>
        <h1 class="login-title">Iniciar Sesión</h1>
        <div class="login-container">
            <form action="/login" method="POST">
                <input class="input-login" type="text" name="email" placeholder="email">
                <input class="input-login" type="password" name="password" placeholder="password">
                <input class="btn-login" type="submit" value='Iniciar sesión'>
            </form>
            <a href="/register">Aún no tengo cuenta...</a>
            <a href='/api/sessions/github'>Entrar con Github</a>
        </div>
    </body>
</html>
